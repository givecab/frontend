# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Authentication Endpoints
VITE_AUTH_LOGIN_ENDPOINT=/api/auth/login/
VITE_AUTH_REFRESH_ENDPOINT=/api/auth/refresh/
VITE_AUTH_LOGOUT_ENDPOINT=/api/auth/logout/

# User Management Endpoints
VITE_USERS_ENDPOINT=/api/users/
VITE_ROLES_ENDPOINT=/api/roles/
VITE_PERMISSIONS_ENDPOINT=/api/permissions/

# Session Configuration (in milliseconds)
VITE_SESSION_IDLE_TIME=300000
VITE_SESSION_WARNING_TIME=30000

# Application Configuration
VITE_APP_NAME=Sistema de Laboratorio
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# UI Configuration
VITE_TOAST_POSITION=bottom-right
VITE_TOAST_DURATION=5000

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
